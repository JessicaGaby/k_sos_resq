<link rel="stylesheet" href="/css/buses/listar.css">
<form action="detalle_familiares/listar/"method="get"></form>

<h1>Listado del Registo Familiar</h1>
<div id="contenedor">
    
    <div class="row">
        {{#each lista}}
        <div id="tarjeta">
            <u><h2>Datos del Registro</h2></u>
            <div>
                <p>{{nombres}}</p>
                <p>{{apellidos}}</p>
                <p>{{correo_electronico}}</p>
            <div>
                <div>
                    <a href="/registro_familiares/editar/{{id_registro_familiar}}"><button type="button">Editar</button></a>
                </div></p>
                <div>
                    <a href="/registro_familiares/eliminar/{{id_registro_familiar}}"><button type="button" style="background-color: red;">Eliminar</button></a>
                </div></p>
            </div>
        </div>
        {{/each}}
    </div>
</div>