<link rel="stylesheet" href="/css/buses/listar.css">
<form action="persona/listar/"method="get"></form>

<h1>Listado de Personas </h1>
<div id="contenedor">
    
    <div class="row">
        {{#each lista}}
        <div id="tarjeta">
            <u><h2>Datos de la Persona</h2></u>
            <div>
                <p>{{nombres}}</p>
                <p>{{apellidos}}</p>
                <p>{{fecha_nacimiento}}</p>
                <p>{{sex}}</p>
                <p>{{direccion}}</p>
                <p>{{correo_persona}}</p>
                
            <div>
                <div>
                    <a href="/persona/listar/{{id_persona}}"><button type="button">Editar</button></a>
                </div></p>
                <div>
                    <a href="/persona/eliminar/{{id_persona}}"><button type="button" style="background-color: red;">Eliminar</button></a>
                </div></p>
            </div>
        </div>
        {{/each}}
    </div>
</div>
