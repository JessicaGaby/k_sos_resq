<link rel="stylesheet" href="/css/buses/agregar.css">
<form action="/mascota/agregar" method="post">

    <body>
        <div id="container">

            <h2>Mascotas</h2>

            <label id="pet" for="mascota">Nombres:</label> <br>
            <input type="text" id="mascota" name="nombre_mascota" required>

            <label id="species" for="especie">Especie:</label> <br>
            <input type="text" id="especie" name="especie" required>

            <label id="race" for="raza">Raza::</label> <br>
            <input type="text" id="raza" name="raza" required>

            <label id="height" for="altura">Altura:</label> <br>
            <input type="text" id="altura" name="altura" required>

            <label id="weight" for="peso">Peso:</label> <br>
            <input type="text" id="peso" name="peso" required>

            <div class="registrarse">
                <button type="submit" id="">Registrar</button>
            </div>
            <div class="cancelar">
           <button type="submit" id="">Guardar</button>
            </div>
        </div>
    </body>
</form>