<link rel="stylesheet" href="/css/buses/agregar.css">
<form action="/mascota/agregar" method="post">

    <body>
        <div id="container">

            <h2>Mascotas</h2>

            <label id="number" for="numero">Numero de telefono:</label> <br>
            <input type="number" id="numero" name="numero_telefonico" required>

            <label id="medicines" for="medicinas">Medicamentos:</label> <br>
            <input type="text" id="medicinas" name="medicamentos" required>

            <label id="address" for="direccion">Direcci√≥n:</label> <br>
            <input type="text" id="direccion" name="direccion" required>

            <label id="date" for="fecha">Fecha de vacuna:</label> <br>
            <input type="date" id="fecha" name="fecha_vacuna" required>

            <label id="name" for="nombre">Nombre del propietario:</label> <br>
            <input type="text" id="nombre" name="nombre_propietario" required>

            <div class="registrarse">
                <button (click)="crearRegistro()">Registrar</button>
            </div>
            <div class="cancelar">
                <button (click)="volverRegistro()">Cancelar</button>
            </div>
        </div>
    </body>
</form>